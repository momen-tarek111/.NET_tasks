@model Product
@{
    Layout = "DashBoardLayout";
}

<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Editing Product</span>
    </div>

    <div>
        <form method="post" asp-action="Edit" class="row">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input type="text"
                       asp-for="Name"
                       value="@Model.Name"
                       class="form-control"
                       placeholder="" />

            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Product Description</label>
                <textarea type="text"
                          asp-for="Description"
                          value="@Model.Description"
                          class="form-control"
                          placeholder=""></textarea>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Quantity" class="form-label">Product Quantity</label>
                <input type="number"
                       asp-for="Quantity"
                       value="@Model.Quantity"
                       class="form-control"
                       placeholder="">
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Price" class="form-label">Product Price</label>
                <input type="number"
                       asp-for="Price"
                       value="@Model.Price"
                       class="form-control"
                       placeholder="">
            </div>
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    @{
                        if (Model.EnableSize)
                        {
                            <input class="form-check-input" type="checkbox" value="true" checked asp-for="EnableSize" />
                            <label class="form-check-label" asp-for="EnableSize"> Enable Product Size </label>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" value="true" unchecked asp-for="EnableSize" />
                            <label class="form-check-label" asp-for="EnableSize"> Enable Product Size </label>
                        }
                    }
                   
                </div>


            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="company.Id" class="form-label">company</label>
                <select class="form-select "
                        asp-for="company.Id">
                    @{
                        if (Model.company.Id == 1)
                        {
                            <option hidden>Select one</option>
                            <option selected value="1">nike</option>
                            <option value="2">adidas</option>
                        }
                        else if (Model.company.Id == 2)
                        {
                            <option hidden>Select one</option>
                            <option  value="1">nike</option>
                            <option selected value="2">adidas</option>
                        }
                        else
                        {
                            <option hidden>Select one</option>
                            <option value="1">nike</option>
                            <option  value="2">adidas</option>
                        }
                    }
                   
                </select>
            </div>


            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>